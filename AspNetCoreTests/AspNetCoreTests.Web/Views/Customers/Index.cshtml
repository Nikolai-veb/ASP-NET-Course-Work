@model IList<CustomerModel>

<h1>Customers</h1>

<div class="row">
    <div class="col-12">
        <p><a asp-controller="Customers" asp-action="Create" class="btn btn-primary">Add new</a></p>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Номер телефона</th>
            <th>E-mail</th>
            <th>Дата создания</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
                <td>@customer.Created</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>