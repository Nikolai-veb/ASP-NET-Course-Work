@{
}
<div class="row">
    <div class="col-md-6 col-lg-4">
            <div class="user-stats">
              <div class="user-stats-id">
                <div class="user-stats-avatar"><img src="/images/maps.png" alt="avatar"><span class="user-stats-status-indicator online"></span></div>
                <div class="user-stats-info"><span class="user-stats-name">@Model.Price</span></div>
              </div>
              <div class="user-stats-indicators">
                <div class="user-stats-indicator"><span class="user-stats-indicator-title">@Model.shippingAddress</span></div>
                <div class="user-stats-indicator"><span class="user-stats-indicator-title">@Model.destinationAddress</span></div>
                <div class="user-stats-indicator"><span class="user-stats-indicator-title">@Model.Status</span></div>
                <div class="user-stats-indicator"><span class="user-stats-indicator-title">@Model.Created</span></div>
              </div>
              <div class="user-stats-milestone"><span>Current Progress</span>
                <div class="progress">
                  <div class="progress-bar progress-bar-primary" style="width: 45%"></div>
                </div>
              </div><a class="user-stats-more-details" href="#">More Details</a>
            </div>
          </div>
</div>