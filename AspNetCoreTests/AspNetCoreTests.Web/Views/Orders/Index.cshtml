@model IList<OrderModel>

<h1>Заказы</h1>

<div class="row">
    <div class="col-12">
        <p><a asp-controller="Orders" asp-action="Create" class="btn btn-primary">Add new</a></p>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Сумма заказа</th>
            <th>Статус</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Price</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>